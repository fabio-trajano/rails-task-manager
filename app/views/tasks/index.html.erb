<div class="container w-50 justify-content-center my-3">
  <div class="row mb-4 text-center">
    <h2>My tasks:</h2>
  </div>
  <ul>
    <% @tasks.each do |task| %>
      <%= link_to "- #{task.title}", task_path(task.id), class:"list-group-item list-group-item-action mx-5" %>
    <% end %>
  </ul>
</div>
<div class="container w-50 text-center">
  <%= link_to "New task", new_path, class: "btn btn-primary mt-3" %>
</div>
