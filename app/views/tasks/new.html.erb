<div class="container w-50 mt-5 text-center">
  <%= form_with model: @task do |f| %>
    <div class="row">
      <%= f.label :title %>
      <%= f.text_field :title, class:"mb-2" %>
    </div>
    <div class="row">
      <%= f.label :details %>
      <%= f.text_field :details, class:"mb-2" %>
    </div>

    <div class="row">
      <%= f.label :completed %>
      <%= f.check_box(:completed, {}, "true", "false") %>
    </div>
      <%= f.submit%>
      <% end %>
</div>
<div class="container w-50 text-center">
  <%= link_to "Back to list", tasks_path, class: "btn btn-secondary mt-3" %>
</div>
